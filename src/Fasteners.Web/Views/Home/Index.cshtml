@model Fasteners.Web.Models.HomeViewModel
@{
    ViewData["Title"] = "Premium Fasteners";
}

<section class="grid gap-6">
    <div class="rounded-2xl bg-white p-10 shadow">
        <h1 class="text-3xl font-bold text-slate-900">Engineered fasteners for every mission</h1>
        <p class="mt-3 text-slate-600">Browse our curated catalog of aerospace-grade bolts, screws, nuts, and washers. Filter by thread standard, diameter, finish, and more.</p>
        <div class="mt-6 grid gap-4 md:grid-cols-4">
            <a class="rounded-lg border border-slate-200 p-4 text-center font-semibold hover:border-amber-400" href="#">Bolts</a>
            <a class="rounded-lg border border-slate-200 p-4 text-center font-semibold hover:border-amber-400" href="#">Screws</a>
            <a class="rounded-lg border border-slate-200 p-4 text-center font-semibold hover:border-amber-400" href="#">Nuts</a>
            <a class="rounded-lg border border-slate-200 p-4 text-center font-semibold hover:border-amber-400" href="#">Washers</a>
        </div>
    </div>

    <div class="rounded-2xl bg-white p-8 shadow">
        <h2 class="text-2xl font-semibold text-slate-900">Featured fasteners</h2>
        <div class="mt-6 grid gap-6 md:grid-cols-3">
            @foreach (var product in Model.FeaturedProducts)
            {
                <article class="flex flex-col rounded-xl border border-slate-200 bg-white p-6 shadow-sm hover:border-amber-400">
                    <div class="flex-1">
                        <p class="text-sm uppercase tracking-wide text-amber-600">@product.Category?.Name</p>
                        <h3 class="mt-2 text-lg font-semibold text-slate-900">@product.Name</h3>
                        <p class="mt-3 line-clamp-3 text-sm text-slate-600">@product.Description</p>
                    </div>
                    <div class="mt-4 text-sm text-slate-500">
                        @if (product.Variants.Count > 0)
                        {
                            var variant = product.Variants.First();
                            <p><span class="font-semibold">SKU:</span> @variant.Sku</p>
                            <p><span class="font-semibold">Price:</span> @variant.UnitPrice.ToString("C")</p>
                        }
                        else
                        {
                            <p class="italic">Variants coming soon</p>
                        }
                    </div>
                    <div class="mt-6">
                        <a class="inline-flex items-center gap-2 rounded-md bg-slate-900 px-4 py-2 text-sm font-semibold text-white hover:bg-slate-700" href="#">View details</a>
                    </div>
                </article>
            }
        </div>
    </div>
</section>
